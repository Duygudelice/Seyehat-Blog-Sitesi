@model Seyehat.Models.siniflar.İletisim
@{
    ViewBag.Title = "MesajDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mesajları Oku</h2>

@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{


    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.İsim)
    @Html.TextBoxFor(x => x.İsim, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Konu)
    @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mesaj)
    @Html.TextAreaFor(x => x.Mesaj, new { @class = "form-control", style = "height:300px;" })
    <br />
   
}

