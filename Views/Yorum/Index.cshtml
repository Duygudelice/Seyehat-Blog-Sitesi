@using Seyehat.Models.siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YORUM LİSTESİ</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>AD SOYAD</th>
        <th>MAİL</th>
        <th>BLOG</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>

            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Blog.Baslik</td>
            <td><a href="\Yorum\YorumSil\@x.ID" class="btn btn-danger">SİLME</a></td>
            <td><a href="\Yorum\YorumGetir\@x.ID" class="btn btn-warning">GÜNCELLE</a></td>
            

        </tr>
    }

</table>




