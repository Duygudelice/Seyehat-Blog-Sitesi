    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="/web/js/move-top.js"></script>
    <script type="text/javascript" src="/web/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
			});
		});
    </script>
    <!---->

</head>
<body>
    <!---header---->
    <div style="height:50px;"> </div>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var x in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@x.BlogResim " alt="" />
                        <h2 style="margin-top:15px;">@x.Baslik</h2>
                        <p>
                            @x.Aciklama
                        </p>
                    </div>
                }
                @foreach (var x in Model.Dger2)
                {
                    <ul class="comment-list">

                        <li>
                            <img src="/web/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p>@x.KullaniciAdi:@x.Yorum </p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                        
                    </ul>
                }
                @Html.Action("YorumYap","Blog")
                </div>

            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>SON POSTLAR</h3>
                    <ul>
                        @foreach(var x in Model.Deger3) {
                        <li><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
                        }
                    </ul>
                </div>
                <div class="comments">
                    <h3>SON YORUMLAR</h3>
                    <ul>
                        @foreach(var x in Model.Deger4) {
                        <li><a href="/Blog/BlogDetay/@x.Blogid">@x.KullaniciAdi </a><a href="#"></a></li>
                        }
                    </ul>
                </div>


                <div class="clearfix"></div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    </div>
